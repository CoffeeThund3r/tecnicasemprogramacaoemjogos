namespace exercicio_05
{
    //Faça um programa que converta uma temperatura de graus Farenheit para graus Celsius.
    //A temperatura em graus Farenheit será informada pelo usuário

    class Program
    {
        static void Main(string[] args)
        {
            double graus_celsius, graus_fahrenheit;
            Console.Write("Digite o valor do graus fahrenheit: ");
            graus_fahrenheit = double.Parse(Console.ReadLine());
            graus_celsius = (graus_fahrenheit - 32) / 1.8;
            Console.WriteLine("O valor do graus celsius: " + graus_celsius);
            
            Console.ReadKey();

        }
    }
}
